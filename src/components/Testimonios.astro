<section id="testimonials" class="py-20 bg-gradient-to-b from-gray-800 via-gray-900 to-gray-800 scroll-mt-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl font-extrabold text-white mb-4">Testimonios</h2>
      <div class="w-20 h-1 bg-blue-500 rounded mx-auto mb-4"></div>
      <p class="text-gray-300 text-lg max-w-3xl mx-auto">
        Lo que dicen nuestros alumnos y empresas sobre nuestra capacitación
      </p>
    </div>

    <!-- Grid de Testimonios -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      
      {testimonios.map((testimonio, index) => (
        <div 
          class="zoom-in bg-gray-800/50 backdrop-blur-sm rounded-2xl p-6 border border-gray-700 hover:border-blue-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-blue-500/10 relative"
          data-start="top 85%"
          data-delay={index * 0.1}
          data-duration="0.6"
        >
          {/* Badge de video si tiene */}
          {testimonio.hasVideo && (
            <div class="absolute top-4 right-4">
              <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full bg-red-500/20 text-red-400 text-xs font-medium">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"/>
                </svg>
                Video
              </span>
            </div>
          )}

          <div class="flex items-start gap-4 mb-4">
            <div class="flex-shrink-0">
              <div class={`w-14 h-14 rounded-full bg-gradient-to-br ${testimonio.color} flex items-center justify-center text-white font-bold text-xl`}>
                {testimonio.iniciales}
              </div>
            </div>
            <div>
              <h4 class="text-white font-bold text-lg">{testimonio.nombre}</h4>
              <p class="text-gray-400 text-sm">{testimonio.cargo}</p>
              <p class={`${testimonio.colorEmpresa} text-sm font-medium`}>{testimonio.empresa}</p>
            </div>
          </div>

          <Rating rating={testimonio.rating} />

          <p class="text-gray-300 text-sm leading-relaxed mt-3">
            {testimonio.texto}
          </p>

          {/* Botón para ver video */}
          {testimonio.hasVideo && (
            <button
              class="video-btn mt-4 w-full flex items-center justify-center gap-2 px-4 py-2 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded-lg transition-all duration-300 hover:scale-105 group cursor-pointer"
              data-video={testimonio.videoUrl}
            >
              Ver testimonio en video
            </button>
          )}
        </div>
      ))}

    </div>

    <!-- CTA -->
    <div class="text-center mt-16">
      <p class="text-gray-300 text-lg mb-6">
        ¿Quieres ser parte de nuestras historias de éxito?
      </p>
      <a
        href="#contact"
        class="inline-block bg-[#5372F0] hover:bg-[#0A256E] text-white text-lg px-8 py-3 rounded-full transition-all duration-300 hover:scale-105"
      >
        Contáctanos
      </a>
    </div>
  </div>

  <!-- Modal de Video (oculto por defecto) -->
  <div id="video-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/80 backdrop-blur-sm p-4">
    <div class="relative w-full max-w-4xl bg-gray-900 rounded-2xl overflow-hidden shadow-2xl">
      <button
        id="close-modal"
        class="absolute top-4 right-4 z-10 w-10 h-10 flex items-center justify-center bg-red-500 hover:bg-red-600 text-white rounded-full transition-all duration-300 hover:scale-110"
        aria-label="Cerrar video"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      
      <!-- Contenedor del iframe con aspect ratio 16:9 -->
      <div class="relative pt-[56.25%]">
        <iframe
          id="video-iframe"
          class="absolute inset-0 w-full h-full"
          src=""
          title="Video testimonio"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('video-modal');
    const iframe = document.getElementById('video-iframe') as HTMLIFrameElement;
    const closeBtn = document.getElementById('close-modal');
    const videoButtons = document.querySelectorAll('.video-btn');

    // Abrir modal
    videoButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const videoUrl = (btn as HTMLElement).dataset.video;
        if (videoUrl) {
          // Agregar autoplay al URL
          const urlWithAutoplay = videoUrl.includes('?') 
            ? `${videoUrl}&autoplay=1` 
            : `${videoUrl}?autoplay=1`;
          
          iframe.src = urlWithAutoplay;
          modal?.classList.remove('hidden');
          modal?.classList.add('flex');
          document.body.style.overflow = 'hidden'; // Prevenir scroll
        }
      });
    });

    // Cerrar modal
    const closeModal = () => {
      iframe.src = ''; // Detener video
      modal?.classList.add('hidden');
      modal?.classList.remove('flex');
      document.body.style.overflow = ''; // Restaurar scroll
    };

    closeBtn?.addEventListener('click', closeModal);

    // Cerrar con ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
        closeModal();
      }
    });

    // Cerrar al hacer click fuera del video
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });
  });
</script>