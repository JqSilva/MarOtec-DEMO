---
import Rating from './Rating.astro';

const testimonios = [
  {
    nombre: "Ignacio Rojas",
    cargo: "Especialista Lineas Energizadas",
    empresa: "CGE",
    iniciales: "IR",
    color: "from-blue-500 to-blue-600",
    colorEmpresa: "text-blue-400",
    rating: 5,
    texto: "Agradecemos a Mar Otec por el curso Líneas Energizadas 23kV. Carlos Vives demostró conocimiento técnico y las prácticas fueron acordes a nuestro trabajo diario.",
    videoId: "35NA47-Van8",
    hasVideo: true
  }
];
---

<section id="testimonials" class="py-20 bg-gradient-to-b from-gray-900 to-gray-800 scroll-mt-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    
    <div class="text-center mb-16">
      <h2 class="text-4xl font-extrabold text-white mb-4">Testimonios</h2>
      <div class="w-20 h-1 bg-blue-500 rounded mx-auto mb-4"></div>
      <p class="text-gray-300 text-lg max-w-3xl mx-auto">
        Lo que dicen nuestros alumnos y empresas sobre nuestra capacitación
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      
      {testimonios.map((testimonio, index) => (
        <div 
          class="zoom-in bg-gray-800/50 backdrop-blur-sm rounded-2xl p-6 border border-gray-700 hover:border-blue-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-blue-500/10 relative"
          data-start="top 85%"
          data-delay={index * 0.1}
          data-duration="0.6"
        >
          {testimonio.hasVideo && (
            <div class="absolute top-4 right-4">
              <span class="inline-flex items-center gap-1 px-2 py-1 rounded-full bg-red-500/20 text-red-400 text-xs font-medium">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"/>
                </svg>
                Video
              </span>
            </div>
          )}

          <div class="flex items-start gap-4 mb-4">
            <div class="flex-shrink-0">
              <div class={`w-14 h-14 rounded-full bg-gradient-to-br ${testimonio.color} flex items-center justify-center text-white font-bold text-xl`}>
                {testimonio.iniciales}
              </div>
            </div>
            <div>
              <h4 class="text-white font-bold text-lg">{testimonio.nombre}</h4>
              <p class="text-gray-400 text-sm">{testimonio.cargo}</p>
              <p class={`${testimonio.colorEmpresa} text-sm font-medium`}>{testimonio.empresa}</p>
            </div>
          </div>

          <Rating rating={testimonio.rating} />

          <p class="text-gray-300 text-sm leading-relaxed mt-3">
            {testimonio.texto}
          </p>

          {testimonio.hasVideo && (
            <button
              class="video-btn mt-4 w-full flex items-center justify-center gap-2 px-4 py-2 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded-lg cursor-pointer"
              data-video-id={testimonio.videoId}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z"/>
              </svg>
              Ver testimonio en video
            </button>
          )}
        </div>
      ))}

    </div>

    <div class="text-center mt-16">
      <p class="text-gray-300 text-lg mb-6">
        ¿Quieres ser parte de nuestras historias de éxito?
      </p>
      <a
        href="#contact"
        class="inline-block bg-[#5372F0] hover:bg-[#0A256E] text-white text-lg px-8 py-3 rounded-full transition-all duration-300 hover:scale-105"
      >
        Contáctanos
      </a>
    </div>
  </div>

  <div id="video-modal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/90 p-4">
    <div class="relative w-full max-w-sm md:max-w-md bg-gray-900 rounded-xl overflow-hidden">
      <button
        id="close-modal"
        class="absolute top-2 right-2 z-10 w-8 h-8 flex items-center justify-center bg-red-500 hover:bg-red-600 text-white rounded-full"
        aria-label="Cerrar video"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      
      <div id="video-container" class="relative w-full" style="padding-top: 177.78%;"></div>
    </div>
  </div>
</section>

<style>
  body.modal-open {
    overflow: hidden;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('video-modal');
    const videoContainer = document.getElementById('video-container');
    const closeBtn = document.getElementById('close-modal');
    const videoButtons = document.querySelectorAll('.video-btn');
    
    let currentIframe = null;

    function createIframe(videoId) {
      const iframe = document.createElement('iframe');
      iframe.className = 'absolute inset-0 w-full h-full';
      iframe.width = '315';
      iframe.height = '560';
      iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
      iframe.title = 'YouTube video player';
      iframe.frameBorder = '0';
      iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share';
      iframe.allowFullscreen = true;
      
      return iframe;
    }

    videoButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const videoId = (btn as HTMLElement).dataset.videoId;
        
        if (videoId && videoContainer) {
          if (typeof gsap !== 'undefined') {
            gsap.globalTimeline.pause();
          }
          
          if (typeof ScrollTrigger !== 'undefined') {
            ScrollTrigger.getAll().forEach(st => st.disable());
          }
          
          const mapsIframe = document.getElementById('maps-iframe');
          if (mapsIframe) {
            (mapsIframe as HTMLElement).style.display = 'none';
          }
          
          document.body.style.animation = 'none';
          
          currentIframe = createIframe(videoId);
          videoContainer.appendChild(currentIframe);
          
          modal?.classList.remove('hidden');
          modal?.classList.add('flex');
          document.body.classList.add('modal-open');
        }
      });
    });

    const closeModal = () => {
      if (currentIframe && videoContainer) {
        videoContainer.removeChild(currentIframe);
        currentIframe = null;
      }
      
      modal?.classList.add('hidden');
      modal?.classList.remove('flex');
      document.body.classList.remove('modal-open');
      
      if (typeof gsap !== 'undefined') {
        gsap.globalTimeline.resume();
      }
      
      if (typeof ScrollTrigger !== 'undefined') {
        ScrollTrigger.getAll().forEach(st => st.enable());
      }
      
      const mapsIframe = document.getElementById('maps-iframe');
      if (mapsIframe) {
        (mapsIframe as HTMLElement).style.display = 'block';
      }
      
      document.body.style.animation = '';
    };

    closeBtn?.addEventListener('click', closeModal);

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal?.classList.contains('hidden')) {
        closeModal();
      }
    });

    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    window.addEventListener('beforeunload', () => {
      if (currentIframe) {
        closeModal();
      }
    });
  });
</script>