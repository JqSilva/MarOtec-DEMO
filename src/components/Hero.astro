---
import Services from "../assets/svg/services.svg";
import Obras from "../assets/svg/obras.svg";
import Mantenimiento from "../assets/svg/mantenimiento.svg";
---

<section
  class="hero-section pt-20 md:pt-16 bg-gradient-to-b from-[#0f0e17] to-[#1a1a2e]"
>
  <!-- Columna izquierda: Texto -->
  <div class="hero-text-container">
    <div class="space-y-4 md:space-y-6">
      <h1
        class="hero-title text-2xl sm:text-3xl md:text-5xl lg:text-6xl text-white"
      >
        Bienvenido a <span class="block md:inline text-[#ff8906]">Mar-Otec</span
        >
      </h1>
      <p
        class="hero-description text-sm sm:text-base md:text-xl text-[#a7a9be]"
      >
        Capacitaciones y Certificaciones en Instalaciones Energizadas.
      </p>
    </div>

    <!-- Íconos -->
    <div class="hero-icons-container mt-8 sm:mt-10 md:mt-16">
      <div
        class="flex flex-wrap justify-center md:justify-start gap-6 sm:gap-10"
      >
        <div class="flex flex-col items-center text-center">
          <Services class="size-8 sm:size-10 text-[#ff8906]" />
          <span
            class="text-base sm:text-lg md:text-xl font-bold text-white pt-2"
            >Servicios</span
          >
        </div>
        <div class="flex flex-col items-center text-center">
          <Mantenimiento class="size-8 sm:size-10 text-[#ff8906]" />
          <span
            class="text-base sm:text-lg md:text-xl font-bold text-white pt-2"
            >Mantenimiento</span
          >
        </div>
        <div class="flex flex-col items-center text-center">
          <Obras class="size-8 sm:size-10 text-[#ff8906]" />
          <span
            class="text-base sm:text-lg md:text-xl font-bold text-white pt-2"
            >Obras</span
          >
        </div>
      </div>
    </div>

    <!-- Botón -->
    <div class="mt-8 sm:mt-10 md:mt-14">
      <a
        href="#services"
        class="btn-hero text-sm sm:text-base md:text-lg px-6 py-2 sm:px-8 sm:py-3 bg-[#ff8906] text-white hover:bg-[#B56104] transition"
      >
        Nuestros Servicios
      </a>
    </div>
  </div>

  <!-- Columna derecha: Imagen -->
  <div class="hero-image mt-8 md:mt-0 rounded-lg shadow-xl"></div>
</section>
