<script is:inline>
  const isMobile = window.innerWidth <= 500;
  const images = isMobile
    ? [
        "/images/hero1-mobile.webp",
        "/images/hero2-mobile.webp",
        "/images/hero3-mobile.webp",
      ]
    : [
        "/images/hero1.webp",
        "/images/hero2.webp",
        "/images/hero3.webp",
      ];

  let index = 0;
  const bg = document.getElementById("hero-bg");
  const dots = document.querySelectorAll("#slider-dots span");
  let intervalId;

  function setImage(i) {
    index = i;
    bg.style.backgroundImage = `url('${images[index]}')`;
    
    // Posicionamiento específico por imagen
    if (index === 2) { 
      bg.style.backgroundPosition = isMobile ? 'center 30%' : 'center 35%';
    } else if (index === 1) {
      bg.style.backgroundPosition = isMobile ? 'center 60%' : 'center 40%';
    } else {
      bg.style.backgroundPosition = isMobile ? 'center 60%' : 'center 40%';
    }
    
    updateDots(index);
  }

  function updateDots(currentIndex) {
    dots.forEach((dot, i) => {
      if (i === currentIndex) {
        dot.classList.add("bg-[#5372F0]", "opacity-100");
        dot.classList.remove("bg-white", "opacity-50");
      } else {
        dot.classList.remove("bg-[#5372F0]", "opacity-100");
        dot.classList.add("bg-white", "opacity-50");
      }
    });
  }

  function startSlider() {
    intervalId = setInterval(() => {
      index = (index + 1) % images.length;
      setImage(index);
    }, 5000);
  }

  // Click handler para los dots
  dots.forEach((dot, i) => {
    dot.addEventListener("click", () => {
      setImage(i);
      clearInterval(intervalId);
      startSlider();
    });
  });

  // Inicializa
  if (bg && images.length > 0) {
    setImage(0);
    startSlider();
  }
</script>