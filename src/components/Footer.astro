---
import Facebook from '../assets/svg/facebook.svg';
import LinkedIn from '../assets/svg/linkedin.svg';
import YouTube from '../assets/svg/youtube.svg';
import Instagram from '../assets/svg/instagram.svg';
---

<footer class="relative w-screen h-[300px] bg-[#002C5F] text-white">
    <div class="relative h-full flex flex-row justify-between items-center px-10">

        <!-- Columna izquierda: texto + redes -->
        <div class="flex flex-col items-center gap-4 ml-100">
            <div class="footer-content">
                <p>© 2025 Mar-Otec | Todos los derechos reservados.</p>
            </div>

            <div class="flex flex-row gap-4 mt-2">
                <a 
                    class="size-10 hover:scale-125 transition"
                    href="https://facebook.com" target="_blank"
                >
                    <Facebook />
                </a>
                <a 
                    class="size-10 hover:scale-125 transition"
                    href="https://www.linkedin.com" target="_blank"
                >
                    <LinkedIn  />
                </a>
                <a 
                    class="size-10 hover:scale-125 transition"
                    href="https://www.youtube.com" target="_blank"
                >
                    <YouTube  />
                </a>
                <a 
                    class="size-10 hover:scale-125 transition"
                    href="https://www.instagram.com/joaquiiv/" target="_blank"
                >
                    <Instagram />
                </a>
            </div>
        </div>
    
        <!-- Columna derecha: contacto -->
        <div class=" space-y-2 mr-100">
            <p>📧 contacto@marotec.cl</p>
            <p>📱 +56 9 1234 5678</p>
            <p>📍 Dirección</p>
        </div>
    </div>

</footer>