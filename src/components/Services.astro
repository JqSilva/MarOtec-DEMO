<style>
  .service-card {
    perspective: 1000px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #card1, #card2, #card3 {
    width: 100%;
    max-width: 384px;
    aspect-ratio: 1;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s;
  }

  .card-front, .card-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backface-visibility: hidden; /* Oculta la parte trasera cuando está rotada */
    border-radius: 12px;
  }

  .card-back {
    min-height: 100%;
    height: auto;
    background-color: oklch(21% 0.034 264.665);
    color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: rotateY(180deg);
  }

  .card-back h6 {
    color: white;
  }

  .card-back p {
    color: oklch(70.7% 0.022 261.325);
  }

  /* Efecto al pasar el cursor sobre la imagen */
  .card-front img {
    transition: transform 0.5s ease;
  }

  /* Aumenta el tamaño de la imagen al pasar el cursor */
  .card:hover .card-front img {
    transform: scale(1.1);
  }

  /* Cuando se hace click, se rota la tarjeta */
  #card1.rotated, #card2.rotated, #card3.rotated {
    transform: rotateY(180deg);
  }

  .rotated {
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }

  /* Botón de más información */
