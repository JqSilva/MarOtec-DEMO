  const btnBack2 = document.getElementById("btn-back2");
  const btnBack3 = document.getElementById("btn-back3");

  // Añadimos un evento de click al botón frontal
  btn1.addEventListener("click", () => {
    card1.classList.toggle("rotated"); // Rota la tarjeta al hacer clic
  });

  btn2.addEventListener("click", () => {
    card2.classList.toggle("rotated"); // Rota la tarjeta al hacer clic
  });
  
  btn3.addEventListener("click", () => {
