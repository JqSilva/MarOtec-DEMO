---
import Curso from "../components/Curso.astro";
import { cursos } from "../data/cursos";
---

<section id="services" class="py-8 bg-gradient-to-b from-[#f7faff] to-white min-h-[900px] scroll-mt-16">
  <div class="mx-auto mt-10 max-w-7xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl text-center font-extrabold text-black mb-6">Cursos</h2>
    <p class="text-center text-gray-600 text-lg max-w-4xl mx-auto mb-5">
      Conoce nuestras capacitaciones diseñadas para mejorar tus competencias técnicas y de seguridad.
    </p><br>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-stretch">
      {
        cursos.map((curso, index) => (
          <div
            class="slide-up"
            data-delay={`${index * 0.15}`}
            data-start="top 80%"
            data-duration="0.6"
          >
            <Curso {...curso} id={`${index}`} />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style is:global>
  .service-card {
    perspective: 1000px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .curso-card {
    width: 100%;
    max-width: 384px;
    aspect-ratio: 1;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s;
  }

  .card-front, .card-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 12px;
  }

  .card-back {
    background-color: oklch(21% 0.034 264.665);
    color: black;
    display: flex;
    justify-content: center;
    align-items: center;
    transform: rotateY(180deg);
  }

  .card-back h6 { color: white; }
  .card-back p { color: oklch(70.7% 0.022 261.325); }

  .card:hover .card-front img {
    transform: scale(1.1);
  }

  .rotated {
    transform: rotateY(180deg);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  }
</style>
