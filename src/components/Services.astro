    console.log("Tarjeta 3 clickeada");
  });
  
  // Añadimos un evento de click al botón de la parte trasera
  btnBack1.addEventListener("click", () => {
    card1.classList.toggle("rotated"); // Rota de vuelta al estado original
  });

  btnBack2.addEventListener("click", () => {
    card2.classList.toggle("rotated"); // Rota de vuelta al estado original
  });

  btnBack3.addEventListener("click", () => {
    card3.classList.toggle("rotated"); // Rota de vuelta al estado original
  });
</script>

