---
import { Image } from 'astro:assets';
const { titulo, descripcion, modalidad, duracion, imagen, id } = Astro.props;
---
<div class="service-card">
  <div class="curso-card bg-white rounded-xl shadow-lg min-h-[300px]" data-id={id}>
    
    <!-- Frente -->
    <div class="card-front absolute w-full h-full backface-hidden">
      <Image src={imagen} alt={titulo} class="w-full h-full object-cover rounded-xl" format='webp' loading="lazy" />
      <div class="absolute inset-0 bg-black opacity-60 rounded-xl"></div>
      <div class="absolute inset-0 flex flex-col justify-center items-center p-6 text-white text-center">
        <h6 class="font-semibold text-2xl mb-4">{titulo}</h6>
        <button class="btn-curso bg-[#5372F0] text-white py-2 px-4 rounded-lg hover:bg-[#0A256E] transition-all cursor-pointer" data-id={id}>
          Más Información
        </button>
      </div>
    </div>

    <!-- Parte trasera -->
    <div class="card-back absolute w-full h-full backface-hidden transform rotate-y-180 flex flex-col justify-between p-6 overflow-y-auto text-center">
      <div>
        <div class="mb-4 mt-4">
          <h6 class="font-semibold text-lg">{titulo}</h6>
        </div>
        <div class="mb-4 mt-2">
          <h6 class="font-semibold text-lg">Descripción</h6>
          <p class="text-sm">{descripcion}</p>
        </div>

        <!-- Modalidad y Duración en paralelo -->
        <div class="flex justify-center gap-12 mb-6 mt-4">
          <div class="text-center">
            <h6 class="font-semibold text-lg">Modalidad</h6>
            <p class="text-sm">{modalidad}</p>
          </div>
          <div class="text-center">
            <h6 class="font-semibold text-lg">Duración</h6>
            <p class="text-sm">{duracion}</p>
          </div>
        </div>
      </div>

      <!-- Botón -->
      <button class="btn-back bg-[#5372F0] text-white py-2 px-4 rounded-lg hover:bg-[#0A256E] transition-all" data-id={id}>
        Volver
      </button>
    </div>

  </div>
</div>
